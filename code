
#Skriver ut menyvalg til brukeren
def meny():
    print("1. Lag et nytt emne")
    print("2. Legg til et emne i studieplan")
    print("3. Skriv ut en liste over regisrerte emner")
    print("4. Skriv ut studieplanen med hvilke emner som er i hvert semester")
    print("5. Sjekk om studieplanen er gyldig eller ikke")
    print("6. Lagre emnene og studieplanen fra fil")
    print("7. Les inn emnene og studieplanen fra fil")
    print ("8. Avslutt program")


def main():
#Lager tre parallelle lister der hver verdi i disse hører til samme emne.
    emner, semestre, studiepoeng = [], [], []  
#Lager en egen liste for studieplanen, her skal (Semester, Emne, og studiepoeng føres inn)
    studieplan = []
    
    while True: 
#Viser meny hver runde i løkka
        meny()  
#Spør bruker om å velge en funksjon fra menyen.
        valg = input("Velg en funksjon: ")
        
        if valg == "1":
#Spør brukeren om å skrive inn emne, og gjør resultatet om til store bokstaver.
            nytt_emne = input("Skriv inn nytt emne: ").strip().upper()
            if nytt_emne in emner:
                print("Emnet finnes allerede.")
            else:
#Lager plassholdere i parallelle lister for å holde indeksene like lange
                emner.append(nytt_emne)
                semestre.append(None)
                studiepoeng.append(None)
                print(f"Emne {nytt_emne} er lagt til.")
                
#Enkel bekreftelse for å skrive alle registrerte emnekoder på skjerm 
            for e in emner:
                print(e)
                
                
        elif valg == "2":
            kode = input("Skriv inn emnekode: ").strip().upper()
            if kode not in emner:
                print("Legg inn emnet først via funksjon 1.")
                continue
            i = emner.index(kode)
            semestre[i] = input("Undervises i (høst/vår): ").strip().lower()
            sp = float(input("Studiepoeng: ").replace(",", "."))
            studiepoeng[i] = sp
            studieplan.append((semestre[i], kode, sp))
            print(f"Emne {kode} registrert: {semestre[i]}")


        elif valg == "3":
            print("\nRegistrerte emner:")
            if not emner:
                print("(ingen)")
            else:
                for i in range(len(emner)):
                    k = emner[i]
                    sp = studiepoeng[i]
        
                    print(f"{k}")
                    
                    
        elif valg == "4":
            print("Studieplan")
            if not emner:
                print("(ingen)")
            else:
                for sem, kode, sp in studieplan:
                    print(f"{sem} | {kode} | {int(sp) if float(sp).is_integer() else sp} studiepoeng")
                    
        elif valg == "5":
            if emner and semestre:
                print("Studieplanen ser gyldig ut.")
            else:
                print("Studieplanen er IKKE gyldig.")
                
       
        elif valg == "6":
            with open("studieplan.txt", "w", encoding="utf-8") as f:
                f.write("Emner:\n")
                for e in emner:
                    f.write(e + "\n")
            
                f.write("\nStudieplan:\n")
                for sem, kode, sp in studieplan:
                    f.write(f"{sem} | {kode} | {int(sp) if float(sp).is_integer() else sp} studiepoeng\n")
                print("Studieplan lagret.")
        
        elif valg == "7":
            try:
                with open("studieplan.txt", "r", encoding="utf-8") as f:
                    print("\nInnhold fra fil:")
                    print(f.read())
            except FileNotFoundError:
                print("Ingen fil funnet. Lagre først.")
            
    
    
        elif valg == "8":
            print("Avslutter Program")
            break
        

if __name__ == "__main__":
    main()
    
                
